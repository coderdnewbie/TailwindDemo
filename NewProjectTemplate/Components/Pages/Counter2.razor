@page "/counter2"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1 class="mb-4 text-3xl font-semibold">Counter</h1>

<p role="status" class="mb-4 text-lg">Current count: @currentCount</p>

<button class="rounded bg-blue-500 px-4 py-2 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
