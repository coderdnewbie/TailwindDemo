@inherits LayoutComponentBase

<div class="page">
    <aside class="sidebar bg-gradient-to-b from-lime-700 to-lime-600">
        <NavMenu />
    </aside>

    <main class="flex-1">
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="whitespace-nowrap hover:underline">
                About
            </a>
        </div>

        <article class="content px-4 pt-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a role="button" class="dismiss">🗙</a>
</div>
